---
import heroVideo from "../../public/heroVideo.mp4";
import "../styles/global.css";
---

<div id="mainHeroContainer">
  <!-- The video -->
  <video autoplay muted loop id="myVideo">
    <source src={heroVideo} type="video/mp4" />
  </video>
  <div id="overlay"></div>
</div>

<div id="contentAreaContainer">
  <h1>
    Elevate Your Portfolio with our <br /> Expert Courses & <br /> Certifications
  </h1>
  <div id="innerContentArea">
    <p>
      Dive into our expertly crafted courses and certifications, designed to
      demystify digital asset investing. Gain comprehensive knowledge, make
      informed decisions, and unlock the full potential of your financial
      future.
    </p>
  </div>
  <div id="formContainer">
    <form action="#">
      <input
        type="email"
        name="heroPageEmail"
        required
        placeholder="Enter your email"
      />
      <button type="submit">Begin your journey</button>
    </form>
  </div>
  <div id="disclaimerText">
    By clicking Begin your journey you're confirming that you agree with our <a
      href="#">Terms and Conditions</a
    >.
  </div>
</div>

<style>
  /* Extra small devices (phones, 600px and down) */
  @media only screen and (max-width: 600px) {
  }

  /* Small devices (portrait tablets and large phones, 600px and up) */
  @media only screen and (min-width: 600px) {
  }

  /* Medium devices (landscape tablets, 768px and up) */
  @media only screen and (min-width: 768px) {
  }

  /* Large devices (laptops/desktops, 992px and up) */
  @media only screen and (min-width: 992px) {
  }

  #mainHeroContainer {
    display: flex;
    justify-content: space-between; /* Spreads out the columns */
    align-items: center; /*Centers content vertically */
    background-color: var(--primaryColor);
    font-family: var(--primaryFontFamily);
    height: 100px;
    position: relative;
    width: 100%;
    height: 900px;
  }

  video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  #contentAreaContainer {
    position: absolute;
    top: 13.31rem;
    left: 3.5rem;
    right: 33.77rem;
    bottom: 18.19rem;
    color: white;
    z-index: 2; /* Place the text above the overlay */
  }

  #contentAreaContainer > h1 {
    font-family: var(--primaryFontFamily);
    color: var(--secondaryColor);
    font-size: 3.11rem;
    font-weight: 700;
    line-height: 120%;
    font-style: normal;
    white-space: pre-line;
    padding-bottom: 1.33rem;
  }

  #innerContentArea {
    width: 31.1rem;
  }

  #innerContentArea > p {
    font-family: var(--primaryFontFamily);
    color: var(--secondaryColor);
    font-size: 1rem;
    font-weight: 400;
    line-height: 150%;
    font-style: normal;
    
  }

  #formContainer {
    display: flex;
    padding-top: 2.22rem;
  }

  #formContainer > form > input {
    font-family: var(--primaryFontFamily);
    width: 392px;
    font-size: 0.89rem;
    font-style: normal;
    font-weight: 400;
    color: var(--neutralDarkGray);
    padding: 0.67rem;
    align-items: center;
    line-height: 150%;
    gap: 8px;
    border-radius: 6px;
    border: 1px solid var(--primaryColor);
    background: var(--secondaryColor);
    margin-right: 0.6rem;
  }

  #formContainer > form > button {
    padding: 0.66rem 1.33rem;
    align-items: center;
    gap: 8px;
    border-radius: 6px;
    border: 1px solid var(--primaryColor);
    background: var(--complimentaryColor);
    font-family: var(--primaryFontFamily);
    font-size: 0.89rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    cursor: pointer;
  }

  #disclaimerText {
    padding-top: 0.56rem;
    font-family: var(--primaryFontFamily);
    font-size: 0.67rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: var(--secondaryColor);
  }

  #disclaimerText > a {
    padding-top: 0.56rem;
    font-family: var(--primaryFontFamily);
    font-size: 0.67rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: var(--secondaryColor);
    text-decoration:underline;
  }

  #disclaimerText > a:active {
    padding-top: 0.56rem;
    font-family: var(--primaryFontFamily);
    font-size: 0.67rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: var(--complimentaryColor);
    text-decoration:underline;
  }

  #disclaimerText > a:visited {
    padding-top: 0.56rem;
    font-family: var(--primaryFontFamily);
    font-size: 0.67rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: var(--secondaryColor);
    text-decoration:underline;
  }

  #disclaimerText > a:hover {
    padding-top: 0.56rem;
    font-family: var(--primaryFontFamily);
    font-size: 0.67rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: var(--complimentaryColor);
    text-decoration:underline;
  }
</style>
